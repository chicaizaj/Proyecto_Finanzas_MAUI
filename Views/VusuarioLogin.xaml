<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Finanzas_MAUI.Views.VusuarioLogin"
             Title="INICIO DE SESION">
    <VerticalStackLayout Padding="30" Spacing="10">

        <Entry x:Name="txtnombre" Placeholder="Nombre de usuario"/>
        <Entry x:Name="txtcontrasena" Placeholder="Contrasena" IsPassword="True"/>
        <Button Text="Iniciar Sesion" Clicked="Button_Clicked" BackgroundColor="#26a69a"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold"/>
        <Button Text="Registrarse" Clicked="Button_Registrar_Clicked" BackgroundColor="#26a69a"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentPage>